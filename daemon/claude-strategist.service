[Unit]
Description=Claude Master Strategist - BTC/ETH Trading Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/ArkNode-AI/projects/trading-signal-ai/strategist
ExecStart=/root/.bun/bin/bun run src/relay.ts
Restart=always
RestartSec=10

# Environment
Environment=HOME=/root
Environment=PATH=/root/.bun/bin:/root/.local/bin:/usr/local/bin:/usr/bin:/bin
EnvironmentFile=/opt/ArkNode-AI/projects/trading-signal-ai/strategist/.env

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=claude-strategist

[Install]
WantedBy=multi-user.target

# SETUP INSTRUCTIONS (CT100):
